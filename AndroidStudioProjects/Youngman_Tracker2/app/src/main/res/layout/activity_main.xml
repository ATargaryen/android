<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Statusbtn"
        android:layout_width="248dp"
        android:layout_height="79dp"
        android:background="#F9DD25"
        android:text="Status"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusview"
        android:layout_width="324dp"
        android:layout_height="235dp"
        android:layout_marginTop="48dp"
        android:text="TextView"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/Statusbtn"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/Statusbtn"
        app:layout_constraintTop_toBottomOf="@+id/Statusbtn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="428dp"
        android:layout_height="425dp"
        android:layout_marginBottom="172dp"
        app:layout_constraintBottom_toTopOf="@+id/statusview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@drawable/youngman" />

</androidx.constraintlayout.widget.ConstraintLayout>