<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Supervisordashboard"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="@color/Black"
        android:text="TRACKING"
        android:fontFamily="serif"
        android:paddingTop="70dp"
        android:paddingStart="40dp"
        android:textSize="60dp"
        android:background="@color/Yellow"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="7dp"
        android:background="@color/WhiteSmoke"
        android:textColor="@color/Black"
        android:text="Assigned Challan List"
        android:textSize="22dp"/>

    <!-- TABLE LAYOUT OPEN -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">

            <TextView
                android:id="@+id/joborderheader"
                android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/JobOrder"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_marginStart="1dp">

            <TextView
                android:id="@+id/statusheader"
                android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/Status"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_marginStart="1dp">

            <TextView
                android:id="@+id/actionheader"
                android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="ACTION"/>

        </LinearLayout>





    </LinearLayout>
    <!-- second row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">

            <TextView
                android:id="@+id/joborderrow1"
                android:textSize="15sp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@color/WhiteSmoke"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="DELL/22020/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_marginStart="1dp">

            <TextView
                android:id="@+id/statusopen"
                android:textSize="25sp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@color/WhiteSmoke"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="open"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_marginStart="1dp">

           <Button
               android:id="@+id/Action"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:text="Click me"
               android:background="@color/white"
               android:textColor="@color/red" />

        </LinearLayout>





    </LinearLayout>

    <!-- TABLE LAYOUT CLOSE -->


</LinearLayout>